{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "outFile": "build/combined.js",
    "target": "ES2017"
  },
  "files": [
    "candle.ts"
  ],
  "include": [
    "core/*.ts",
    "constraints/*.ts",
    "controls/*.ts"
  ],
  "compileOnSave": true,
  "indentSize": 2,
  "tabSize": 2
}
